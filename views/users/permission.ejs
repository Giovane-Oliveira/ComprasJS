<%- include('../partials/header.ejs') %>

      <a href="/dashboard"><img src="../images/icon-white.svg" style="width:180px; height:180px; margin-top:-102px; margin-left: -25px"></a>

      <h2 class='mb-4'>Gerenciamento de Usuários</h2>

      <br>
      <table id="example" class="table table-striped table-bordered" style="width: 100%">

        <thead>
          <tr>
            <th>Id</th>
            <th>Gerenciar Usuários</th>
            <th>Cadastrar Fornecedores</th> 
            <th>Criar Chamado</th>    
            <th>Criar Categoria</th>           
          </tr>
        </thead>
        <tbody>

            <tr>
              <td>
                <%= permissions.id %>
              </td>
             
              <% if(permissions.user_registration == 1){%>
                <td> <input name="user_registration" id=<%=user.user.id %>  type="checkbox" checked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                <% }else{ %>
                  <td> <input name="user_registration" id=<%=user.user.id %> type="checkbox" unchecked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                  <% } %>

              <% if(permissions.supplier_registration == 1){%>
                <td> <input name="supplier_registration" id=<%=user.user.id %> type="checkbox" checked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                <% }else{ %>
                  <td> <input name="supplier_registration" id=<%=user.user.id  %> type="checkbox" unchecked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                  <% } %>

                  <% if(permissions.create_call == 1){%>
                    <td> <input name="create_call" id=<%=user.user.id  %>  type="checkbox" checked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                    <% }else{ %>
                      <td> <input name="create_call" id=<%=user.user.id  %> type="checkbox" unchecked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                      <% } %>
    
                  <% if(permissions.create_category == 1){%>
                    <td> <input name="create_category" id=<%=user.user.id  %> type="checkbox" checked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                    <% }else{ %>
                      <td> <input name="create_category" id=<%=user.user.id  %> type="checkbox" unchecked data-toggle="toggle" data-onstyle="success" data-size="xs"></td>
                      <% } %> 
                

            </tr>


              <script type="text/javascript">


                $('input:checkbox').change(
                  function () {
                    if ($(this).is(':checked')) {
                      // alert($(this).attr("id"));
                      window.location.href = "/activate/permission/" + $(this).attr("name") + "/" + $(this).attr("id");
                    } else {

                      //alert($(this).attr("id"));
                      window.location.href = "/desactivate/permission/" + $(this).attr("name") + "/" + $(this).attr("id");
                    }
                  });

              </script>


        </tbody>
      </table>





      <script type="text/javascript">

        var table = new DataTable('#example', {
          language: {
            url: '//cdn.datatables.net/plug-ins/2.0.3/i18n/pt-BR.json',
          },

          order: 'desc'
        });

      </script>


